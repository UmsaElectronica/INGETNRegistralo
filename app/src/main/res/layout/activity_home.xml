<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.luis.ingetnregistralo.HomeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="#03fdfd">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="MENÃš DE COMUNICADOS"
                    android:id="@+id/textView4"
                    android:textAlignment="center"
                    android:textColor="#0b11c1"
                    android:textSize="22dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#0256bc"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cerrarbtn"
                        android:background="@drawable/cerrar"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/homebtn"
                        android:background="@drawable/home"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fondo">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/testbtn"
                        android:layout_weight="1"
                        android:background="@drawable/test"
                        android:layout_margin="15dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="EXAMENES"
                        android:id="@+id/textView5"
                        android:layout_weight="5"
                        android:textAlignment="center"
                        android:textColor="#0638db"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:src="@drawable/eiv" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/varbtn"
                        android:layout_weight="1"
                        android:background="@drawable/var"
                        android:layout_margin="15dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="VARIOS"
                        android:id="@+id/textView6"
                        android:layout_weight="5"
                        android:textAlignment="center"
                        android:textColor="#feaa04"
                        android:textSize="15dp"
                        android:textStyle="normal|bold"
                        android:src="@drawable/viv"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/elimbtn"
                        android:layout_weight="1"
                        android:background="@drawable/erase"
                        android:layout_margin="15dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="EXAMENES"
                        android:id="@+id/tex"
                        android:layout_weight="5"
                        android:textAlignment="center"
                        android:textColor="#0638db"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:src="@drawable/miv" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/clasebtn"
                        android:layout_weight="1"
                        android:background="@drawable/clases"
                        android:layout_margin="15dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="CLASES"
                        android:id="@+id/textView8"
                        android:layout_weight="5"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="#07f903"
                        android:textAlignment="center"
                        android:src="@drawable/civ"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/docbtn"
                        android:layout_weight="1"
                        android:background="@drawable/doc"
                        android:layout_margin="15dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="DOCUMENTOS"
                        android:id="@+id/textView9"
                        android:layout_weight="5"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="#ea05f9"
                        android:textAlignment="center"
                        android:src="@drawable/div"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/salirbtn"
                        android:layout_weight="1"
                        android:background="@drawable/salir"
                        android:layout_margin="15dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="EXAMENES"
                        android:id="@+id/textVi"
                        android:layout_weight="5"
                        android:textAlignment="center"
                        android:textColor="#0638db"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:src="@drawable/siv" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
